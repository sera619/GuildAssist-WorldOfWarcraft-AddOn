						<Anchors>
							<Anchor point="BOTTOM" x="-76" y="-36" />
						</Anchors>
						<Scripts>
							<OnClick>
								CongrACMCheck_OnClick()
							</OnClick>
						</Scripts>
					</CheckButton>
				</Frames>
				<FontString name="GratulationEditString" inherits="ChatFontNormal" font="Fonts\2002B.ttf" text="dqwe">
					<Size x="10.2" y="10.2" />
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER" x="0" y="0" />
					</Anchors>
					<FontHeight val="16" />
					<Color r="1" g="1" b="0" />
				</FontString>
			</EditBox>
			<Button name="CancelButton" inherits="UIPanelButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Abbruch">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="BOTTOM" x="45" y="22" />
				</Anchors>
				<Scripts>
					<OnClick>
						ExitButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="ReloadButton" inherits="UIPanelButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Reload">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="TOPLEFT" x="349" y="-16" />
				</Anchors>
				<Scripts>
					<OnClick>
						ReloadButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="SetDefaultButton" inherits="UIPanelButtonTemplate" hidden="true" text="Default">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="TOPLEFT" x="146" y="-285" />
				</Anchors>
			</Button>
			<Button name="SetOwlButton" inherits="UIPanelButtonTemplate" hidden="true" text="Eule">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="TOPLEFT" x="245" y="-285" />
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnMouseDown>
				MainFrame:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				MainFrame:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>