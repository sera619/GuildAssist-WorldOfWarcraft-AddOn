			<Layer level="OVERLAY">
				<FontString name="HeaderString" inherits="GameFontNormal" font="Fonts\MORPHEUS_CYR.TTF" text="Guild Assist" outline="THICK">
					<Size x="271" y="51" />
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="-15" />
					</Anchors>
					<FontHeight val="35" />
				</FontString>
				<FontString name="VersionString" inherits="GameFontNormal" setAllPoints="true" text="v1.2.1 2022 © S3R43o3">
					<Size x="254" y="20" />
					<Anchors>
						<Anchor point="TOP" x="0" y="-65" />
					</Anchors>
				</FontString>
				<FontString name="InformationString" inherits="GameFontNormal" text="Dieses kleine Addon ist zum automatisierten senden einer Glückwunsch Nachricht wenn ein Gildenmitglied einen Erfolg erreicht. Trage deine Glückwunschnachricht ein und setzte das Häckchen.">
					<Size x="375" y="84" />
					<Anchors>
						<Anchor point="TOP" x="0" y="-105" />
					</Anchors>
				</FontString>
				<FontString inherits="GameFontNormal" text="Deine aktuelle Nachricht:">
					<Size x="375" y="31" />
					<Anchors>
						<Anchor point="TOPLEFT" x="50" y="-182" />
					</Anchors>
					<Color r="0.753" g="1" b="1" />
				</FontString>
				<FontString name="CurrentGratulationString" inherits="GameFontNormal" text="Herzlichen Glückwunsch, [Name]!" maxLines="1">
					<Size x="410" y="36" />
					<Anchors>
						<Anchor point="TOPLEFT" x="32" y="-219" />
					</Anchors>
					<FontHeight />
					<Color r="0" g="1" b="0" />
				</FontString>
				<FontString name="InfoString" inherits="GameFontNormal" hidden="true" text="Oder verwende eine vorgefertigte Nachricht.">
					<Size x="410" y="20" />
					<Anchors>
						<Anchor point="TOPLEFT" x="32" y="-259" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="OkButton" inherits="UIPanelButtonTemplate" enableMouseClicks="true" text="Okay">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="BOTTOM" x="-54" y="21" />
				</Anchors>
				<Scripts>
					<OnClick>
						OkButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="ExitButton" inherits="UIPanelButtonTemplate" text="X">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor point="TOPLEFT" x="434" y="-15" />
				</Anchors>
				<Scripts>
					<OnClick>
						ExitButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<EditBox name="MessageEdit" inherits="InputBoxTemplate" parent="MainFrame" enableMouseClicks="true" enableKeyboard="true" autoFocus="false">
				<Size x="410" y="17" />
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="90" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="ACMCheckString" inherits="GameFontNormal" text="automatisch senden">
							<Size x="164" y="30" />
							<Anchors>
								<Anchor point="BOTTOM" x="14" y="-36" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<CheckButton name="CongrACMCheck" inherits="UICheckButtonTemplate" text="CheckButton1">
