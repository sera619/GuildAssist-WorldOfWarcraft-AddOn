<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="MainUI" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Frame1.lua" />
	<Frame name="MainFrame" inherits="BackdropTemplate" parent="UIParent" toplevel="true" movable="true" enableMouse="true" enableMouseClicks="true" enableMouseMotion="true">
		<Font virtual="true" font="Fonts\MORPHEUS_CYR.TTF" outline="NONE" height="60">
		<Color r="1" g="1" b="1" />
	</Font>
		<Size x="475" y="372" />
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset x="100" y="-201" />
			</Anchor>
		</Anchors>
		<KeyValues>
			<KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" keyType="string" type="global" />
		</KeyValues>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
